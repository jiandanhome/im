<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_222328">


    <ImageView

        android:id="@+id/iv_portrait"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:scaleType="fitXY" />


    <TextView

        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/iv_portrait"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_user_name"
        android:gravity="center"
        android:text="邀请你加入语音聊天..."
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_bt">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_guaduan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/icon_yy_guaduan" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_jieting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_av_jieting" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>