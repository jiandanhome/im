<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.noober.background.view.BLRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bl_corners_radius="2dp"
        app:bl_solid_color="@color/color_FFFFFF"
        app:bl_stroke_color="@color/color_FFFFFF"
        app:bl_stroke_width="2dp">


        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/im_icon_bg_card_smar" />


        <com.noober.background.view.BLTextView
            android:id="@+id/tv_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_card"
            android:layout_alignLeft="@+id/iv_card"
            android:layout_alignRight="@+id/iv_card"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="小小区小区小区小区小区小区小区小区小区小区小区小区小区小区小区小区区" />


        <TextView
            android:id="@+id/tv_stop_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_card_title"
            android:layout_alignLeft="@+id/iv_card"
            android:layout_alignRight="@+id/iv_card"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            tools:text="统计截止时间2020.10.20" />

    </com.noober.background.view.BLRelativeLayout>


</RelativeLayout>
