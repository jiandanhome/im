<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_body"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.noober.background.view.BLRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bl_corners_radius="2dp"
        app:bl_solid_color="@color/color_FFFFFF"
        app:bl_stroke_color="@color/color_FFFFFF"
        app:bl_stroke_width="2dp">


        <com.noober.background.view.BLTextView
            android:id="@+id/tv_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_card"
            android:layout_alignLeft="@+id/iv_card"
            android:layout_alignRight="@+id/iv_card"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            tools:text="我已申请查看本小区的评测报告" />


        <com.noober.background.view.BLTextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_stop_date"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/tv_card_title"
            android:layout_alignRight="@+id/tv_card_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_FFFFFF"
            android:textSize="12sp"
            app:bl_corners_radius="2dp"
            app:bl_solid_color="@color/color_4398FF"
            app:bl_stroke_color="@color/color_4398FF"
            tools:text="发送报告" />

    </com.noober.background.view.BLRelativeLayout>


</RelativeLayout>
